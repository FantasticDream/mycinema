<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <!-- 标题栏 -->
    <include layout="@layout/title" />

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        >

        <RadioButton
            android:id="@+id/rb_video"
            android:text="本地视频"
            style="@style/rg_bottom_tag_style"
            android:drawableTop="@drawable/rb_video_selector"
            />

        <RadioButton
            android:id="@+id/rb_audio"
            android:text="本地音频"
            android:drawableTop="@drawable/rb_audio_selector"
            style="@style/rg_bottom_tag_style"
            />

        <RadioButton
            android:id="@+id/rb_net_video"
            android:text="网络视频"
            style="@style/rg_bottom_tag_style"
            android:drawableTop="@drawable/rb_net_video_selector"
            />

        <RadioButton
            android:id="@+id/rb_net_audio"
            android:text="网络音频"
            style="@style/rg_bottom_tag_style"
            android:drawableTop="@drawable/rb_net_audio_selector"
            />

    </RadioGroup>

</LinearLayout>